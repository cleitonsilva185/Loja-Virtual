@model List<LojaVirtualCleiton.Models.ProdutoListaViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Lista de  Produtos</h2>

<a href="@Url.Action("Editar","Fornecedor")"style="float: right;"> Novo Fornecedor</a>

<table>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Nome</td>
            <td>@item.Categoria</td>
            <td>@item.Fornecedor</td>
            <td>
                @Html.ActionLink("Editar", "Editar", "Fornecedor", new { id = item.Id }, null)
            @Html.ActionLink("Apagar", "Apagar", "Fornecedor", new { id = item.Id }, null)
        </td>
        </tr>
    }

</table>
    



